{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Fern",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#type-declarations" },
    { "include": "#functions" },
    { "include": "#constructor-calls" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#properties" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.documentation.fern",
          "begin": "---+",
          "end": "---+",
          "patterns": [
            {
              "name": "comment.block.documentation.region.fern",
              "match": "^---\\s+(.+?)\\s+---$",
              "captures": {
                "1": { "name": "entity.name.section.fern" }
              }
            }
          ]
        },
        {
          "name": "comment.line.double-dash.fern",
          "match": "--.*$",
          "patterns": [
            {
              "name": "keyword.other.documentation.fern",
              "match": "\\b(TODO|FIXME|NOTE|HACK|XXX)\\b"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fern",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.fern",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.backtick.fern",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.fern",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.fern",
          "match": "\\b\\d+\\.\\d+[lL]?\\b"
        },
        {
          "name": "constant.numeric.integer.fern",
          "match": "\\b\\d+[uU]?[lL]?\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.fern",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "variable.language.this.fern",
          "match": "\\b(this)\\b"
        },
        {
          "name": "variable.other.field.fern",
          "match": "\\b(field)\\b"
        },
        {
          "name": "variable.other.value.fern",
          "match": "\\b(value)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.fern",
          "match": "\\b(if|else|while|for|in|at|by|step|return|break|continue)\\b"
        },
        {
          "name": "keyword.other.fern",
          "match": "\\b(var|fn|type|ref|op|implicit|explicit|cast|public|private|protected|get|set)\\b"
        },
        {
          "name": "storage.type.primitive.fern",
          "match": "\\b(i32|i64|u32|u64|f32|f64|bool|string|int|float|double|uint|long|ulong)\\b"
        },
        {
          "name": "keyword.operator.arrow.fern",
          "match": "=>"
        },
        {
          "name": "keyword.operator.return-type.fern",
          "match": "->"
        }
      ]
    },
    "type-declarations": {
      "patterns": [
        {
          "name": "meta.type-declaration.fern",
          "match": "\\b(type|ref\\s+type)\\s+([A-Z][A-Za-z0-9_]*)\\s*(<[^>]+>)?",
          "captures": {
            "1": { "name": "keyword.other.fern" },
            "2": { "name": "entity.name.type.fern" },
            "3": { "name": "meta.type.parameters.fern" }
          }
        }
      ]
    },
    "constructor-calls": {
      "patterns": [
        {
          "match": "\\b(new)\\s+([A-Z][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.other.new.fern" },
            "2": { "name": "entity.name.type.fern" }
          },
          "comment": "new Type constructor calls"
        }
      ]
    },
    "properties": {
      "patterns": [
        {
          "name": "meta.property.declaration.fern",
          "begin": "\\b(var)\\s+([A-Z][A-Za-z0-9_]*)\\s*(=|=>)",
          "beginCaptures": {
            "1": { "name": "keyword.other.fern" },
            "2": { "name": "variable.other.property.fern" },
            "3": { "name": "keyword.operator.fern" }
          },
          "end": "(?=[;}])|(?=\\{)",
          "patterns": [
            { "include": "$self" }
          ]
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.fern",
          "match": "\\b([A-Z][A-Za-z0-9_]*)(\\[\\])?\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=|;|\\)|,|$)",
          "captures": {
            "1": { "name": "entity.name.type.fern" },
            "2": { "name": "punctuation.definition.array.fern" },
            "3": { "name": "variable.other.fern" }
          },
          "comment": "Type when used in variable declarations like 'Animal stuff = ...'"
        },
        {
          "name": "entity.name.type.fern",
          "match": "(?<=->)\\s*([A-Z][A-Za-z0-9_]*(?:\\[\\])?)",
          "captures": {
            "1": { "name": "entity.name.type.fern" }
          },
          "comment": "Return type after ->"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.definition.generic.fern",
          "begin": "\\b(fn)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*(<)",
          "beginCaptures": {
            "1": { "name": "keyword.other.fern" },
            "2": { "name": "entity.name.function.fern" },
            "3": { "name": "punctuation.definition.generic.begin.fern" }
          },
          "end": "(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.generic.end.fern" }
          },
          "patterns": [
            { "include": "#generic-parameters" }
          ],
          "comment": "Function definition with generics"
        },
        {
          "name": "meta.function.definition.simple.fern",
          "match": "\\b(fn)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.other.fern" },
            "2": { "name": "entity.name.function.fern" }
          },
          "comment": "Simple function definition - just fn and name"
        },
        {
          "name": "meta.constructor.definition.fern",
          "match": "\\b(new)(?=\\s*\\()",
          "captures": {
            "1": { "name": "keyword.other.fern" }
          },
          "comment": "Constructor definition"
        },
        {
          "name": "meta.operator.definition.fern",
          "match": "\\b(op)\\s+([+\\-*/!<>=&|^%]+|[A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.other.fern" },
            "2": { "name": "entity.name.function.fern" }
          },
          "comment": "Operator overload definition"
        },
        {
          "name": "meta.function.call.generic.fern",
          "begin": "\\b([A-Z][A-Za-z0-9_]*)\\s*(<)(?=[^<>=]*>\\s*\\()",
          "beginCaptures": {
            "1": { "name": "entity.name.function.fern" },
            "2": { "name": "punctuation.definition.generic.begin.fern" }
          },
          "end": "(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.generic.end.fern" }
          },
          "patterns": [
            { "include": "#generic-arguments" }
          ],
          "comment": "Generic function call like Generic<int, float>(...)"
        },
        {
          "name": "entity.name.function.fern",
          "match": "\\b[A-Z][A-Za-z0-9_]*(?=\\s*\\()",
          "comment": "Function call with PascalCase"
        }
      ]
    },
    "generic-parameters": {
      "patterns": [
        {
          "match": "\\b([A-Z][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "entity.name.type.parameter.fern" }
          },
          "comment": "Generic type parameter"
        },
        {
          "match": ",",
          "name": "punctuation.separator.comma.fern"
        }
      ]
    },
    "generic-arguments": {
      "patterns": [
        {
          "match": "\\b([A-Za-z_][A-Za-z0-9_\\[\\]]*)\\b",
          "captures": {
            "1": { "name": "entity.name.type.fern" }
          },
          "comment": "Generic type argument"
        },
        {
          "match": ",",
          "name": "punctuation.separator.comma.fern"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.compound.fern",
          "match": "(\\+=|-=|\\*=|/=|%=|\\*\\*=|&=|\\|=|\\^=|<<=|>>=)"
        },
        {
          "name": "keyword.operator.comparison.fern",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.fern",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.fern",
          "match": "(&|\\||\\^|~|<<|>>)"
        },
        {
          "name": "keyword.operator.arithmetic.fern",
          "match": "(\\+|-|\\*|/|%|\\*\\*)"
        },
        {
          "name": "keyword.operator.assignment.fern",
          "match": "="
        },
        {
          "name": "keyword.operator.range.fern",
          "match": "\\.\\.(=)?"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.array.fern",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.block.fern",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.parameters.fern",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.fern",
          "match": "[,;]"
        },
        {
          "name": "punctuation.accessor.fern",
          "match": "\\."
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.member.fern",
          "match": "(?<=\\.)\\b[A-Za-z_][A-Za-z0-9_]*\\b",
          "comment": "Member access after dot"
        },
        {
          "name": "variable.other.fern",
          "match": "\\b[a-z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "parameters": {
      "patterns": [
        {
          "match": "([A-Za-z_][A-Za-z0-9_]*(?:\\[\\])?)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.fern" },
            "2": { "name": "variable.parameter.fern" }
          }
        }
      ]
    },
    "generics": {
      "patterns": [
        {
          "name": "meta.type.parameters.fern",
          "begin": "<",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.generic.begin.fern" }
          },
          "end": ">",
          "endCaptures": {
            "0": { "name": "punctuation.definition.generic.end.fern" }
          },
          "patterns": [
            { "include": "#types" },
            { "include": "#punctuation" },
            { "include": "#generic-parameters" }
          ]
        }
      ]
    }
  },
  "scopeName": "source.fern"
}